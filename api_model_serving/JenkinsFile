pipeline {
    agent any

    options{
        buildDiscarder(logRotator(numToKeepStr: '5', daysToKeepStr: '5'))
        timestamps()
    }

    environment {
        REGISTRY = 'api_model_serving/api_model_serving_api'
        REGISTRY_CREDENTIAL = 'dockerhub'
        BUILD_NUMBER = 'latest'
    }

    stages {
        stage('Docker Test') {
            steps {
                sh 'docker --version'
            }
        }

        stage('Test') {
            agent {
                docker {
                    image 'python:3.9'
                }
            }
            environment {
                MLFLOW_TRACKING_URI = "http://host.docker.internal:5001"
            }
            steps {
                echo 'Testing FastAPI app...'
                sh '''
                    pip install --no-cache-dir -r api_model_serving/app/requirements.txt
                    pytest
                '''
            }
            
        }

        stage('Build') {
            steps {
                script {
                    echo 'Building Docker image...'
                    dockerImage = docker.build("${REGISTRY}:${BUILD_NUMBER}")
                }
            }
        }

        stage('Push') {
            steps {
                script {
                    echo 'Pushing Docker image to Docker Hub...'
                    docker.withRegistry('', REGISTRY_CREDENTIAL)  {
                        dockerImage.push()
                        dockerImage.push('latest')
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying container...'
                sh '''
                    . api_model_serving/deploy.sh
                    docker logs -f fastapi-app
                '''
            }
        }
    }
}
